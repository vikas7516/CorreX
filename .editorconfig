# EditorConfig for CorreX
# https://editorconfig.org/

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Configuration files
[{*.toml,*.ini,*.cfg}]
indent_style = space
indent_size = 4

# Batch/Shell files
[*.{bat,ps1,sh}]
indent_style = space
indent_size = 2
